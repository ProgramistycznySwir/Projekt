<Page x:Class="SingleNeuronVisualisation.MVVM.Charts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SingleNeuronVisualisation.MVVM"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Charts">

    <Grid x:Name="ChartGrid">
        <ScrollViewer HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Disabled">
            <Grid x:Name="Viewport" Height="400" Margin="20">
                <!--<Line X1="0" Y1="0"
                      X2="0" Y2="400"
                      Stroke="Black"
                      StrokeThickness="4"></Line>-->
                <Rectangle Height="Auto" Width="Auto"
                           Stroke="Gray"
                           StrokeThickness="2"/>
                <Polyline x:Name="Line_train" Stroke="DarkRed" StrokeThickness="4" />
                <Polyline x:Name="Line_test" Stroke="YellowGreen" StrokeThickness="4" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

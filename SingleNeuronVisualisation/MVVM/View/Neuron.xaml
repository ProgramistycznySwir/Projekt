<Page x:Class="SingleNeuronVisualisation.MVVM.View.Neuron"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SingleNeuronVisualisation.MVVM.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Neuron">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Canvas x:Name="MainCanvas">
            <Line X1="0" Y1="0"
                  X2="150" Y2="0"
                  Canvas.Top="225" Canvas.Right="80"
                  Stroke="Gray"
                  StrokeThickness="4"
                />
            <Line
            X1="10" Y1="10"
            X2="50" Y2="195"
            Stroke="Black"
            StrokeThickness="4" Canvas.Left="97" Canvas.Top="47" Height="133" Width="193" />
            <Ellipse x:Name="MainNeuron"
                     Fill="Black"
                     Width="60" Height="60" 
                     Canvas.Top="195" Canvas.Right="200" />
            <Image x:Name="OutputNode"
                   Source="\Images\SigmoidIcon.png" 
                   Width="60" Height="60"
                   Canvas.Top="195" Canvas.Right="50"
                   />
        </Canvas>
    </ScrollViewer>
</Page>
